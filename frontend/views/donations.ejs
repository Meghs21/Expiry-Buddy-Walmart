    <script id="donationInteractions">
      document.addEventListener("DOMContentLoaded", function () {
        const donateButtons = document.querySelectorAll(".donate-btn");
        donateButtons.forEach((button) => {
          button.addEventListener("click", function () {
            alert(
              "Thank you for your interest in this donation! This feature will be available soon.",
            );
          });
        });
        const sortSelect = document.getElementById("sortSelect");
        const donationCards = document.getElementById("donationCards");
        function getCardData(card) {
          const dateText = card.querySelector('[class*="ri-calendar-event-line"]')
            .parentElement.nextElementSibling.textContent;
          const quantityText = card.querySelector('[class*="ri-scales-3-line"]')
            .parentElement.nextElementSibling.textContent;
          const date = new Date(dateText.split(": ")[1]);
          const quantity = parseInt(quantityText.split(": ")[1]);
          return { date, quantity };
        }
        function sortCards(criterion) {
          const cards = Array.from(donationCards.children);
          cards.forEach((card) => {
            card.style.transition = "transform 0.3s ease, opacity 0.3s ease";
            card.style.opacity = "0";
            card.style.transform = "translateY(20px)";
          });
          setTimeout(() => {
            cards.sort((a, b) => {
              const dataA = getCardData(a);
              const dataB = getCardData(b);
              if (criterion === "date") {
                return dataB.date - dataA.date;
              } else {
                return dataB.quantity - dataA.quantity;
              }
            });
            cards.forEach((card, index) => {
              donationCards.appendChild(card);
              setTimeout(() => {
                card.style.opacity = "1";
                card.style.transform = "translateY(0)";
              }, index * 100);
            });
          }, 300);
        }
        sortSelect.addEventListener("change", function () {
          sortCards(this.value);
        });
      });
    </script>
